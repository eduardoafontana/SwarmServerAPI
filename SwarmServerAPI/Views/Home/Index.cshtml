
<h1>Sessions data</h1>

<style>
    button:disabled {
        color: #a0a0a0;
    }

    html, body, .body-content {
        height: 100%;
    }

    body > div.container{
        max-width:100%;
        margin-left: 50px;
        margin-right: 50px;
    }
</style>

<div style="padding: 4px">
    <div style="float: right;">
        <input type="text" id="quickFilterInput" placeholder="Type text to filter..." />
        <button id="btResetGrid">Reset Grid</button>
        <button id="btReloadFromServer">Reload From Server</button>
    </div>
    <div style="padding: 4px;">
        <b>Showing</b> <span id="rowCount"></span> <b>sessions</b>
    </div>
    <div style="clear: both;"></div>
</div>
<div style="width: 100%; height: 100%;"
        id="sessionDataGrid"
        class="ag-theme-fresh ag-basic">
</div>

@Scripts.Render("~/bundles/data-session")