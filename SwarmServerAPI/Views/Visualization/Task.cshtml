<h1>Tasks</h1>
<br />
<style>
    button:disabled {
        color: #a0a0a0;
    }

    body > div.container {
        max-width: 100%;
        margin-left: 50px;
        margin-right: 50px;
    }
</style>

<div style="padding: 4px">
    <div style="float: right;">
        <input type="text" id="quickFilterInput" placeholder="Type text to filter..." />
        <button id="btResetGrid">Reset Grid</button>
        <button id="btReloadFromServer">Reload From Server</button>
    </div>
    <div style="padding: 4px;">
        <b>Showing</b> <span id="rowCount"></span> <b>tasks</b>
    </div>
    <div style="clear: both;"></div>
</div>
<div id="taskDataGrid" class="ag-theme-fresh ag-basic">
</div>

@Scripts.Render("~/bundles/data-task")

<!-- Modal -->

@Scripts.Render("~/bundles/cytoscape")

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Session View</h4>
            </div>
            <div class="modal-body">

                <div id="cy"></div>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#myModal').on('show.bs.modal', function (event) {
        //Modal setup
        $('.modal .modal-body').css('overflow-y', 'auto');
        $('.modal .modal-body').css('height', $(window).height() * 0.87);
        $('.modal .modal-dialog').css('width', $(window).width() * 0.95);

        var button = $(event.relatedTarget);
        var identifier = button.data('identifier');

        //Modal content visualization
        $.get(location.origin + '/api/Visualization/Task/' + identifier, function (data) {

            var cy = cytoscape({
                container: document.getElementById('cy'),

                elements: data,

                style: [
                    {
                        selector: 'node',
                        style: {
                            'background-color': '#666',
                            'label': 'data(method)',
                            'width': 10,
                            'height': 10,
                        }
                    },
                    {
                        selector: 'edge',
                        style: {
                            'width': 2,
                            'line-color': '#ccc',
                            'target-arrow-color': '#ccc',
                            'target-arrow-shape': 'triangle'
                        }
                    }
                ],

                layout: {
                    name: 'grid'
                    //, rows: 20
                },

                ready: function () {
                    window.cy = this;
                },

                wheelSensitivity: 0.1
            });

            cy.animate({
                pan: { x: 50, y: 50 },
                zoom: 1
            },
            {
                duration: 1000
            });

            $(cy.filter('node')).each(function () {
                this.style('height', this.data().size);
                this.style('width', this.data().size);

                this.style('background-color', '#' + this.data().color);
            });

        });
    });
</script>