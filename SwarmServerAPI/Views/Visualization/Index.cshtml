
@{
    ViewBag.Title = "Visualization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/cytoscape")
@Scripts.Render("~/bundles/dagre")
@Scripts.Render("~/bundles/cytoscape-dagre")
@Scripts.Render("~/bundles/cytoscape-qtip")

<style>
    #cy {
        width: 1200px;
        height: 600px;
        display: block;

        border: 1px solid black;
    }
</style>
<script language="javascript">

    $(function () {
        var cy = cytoscape({
            container: document.getElementById('cy'),

            elements: @Html.Raw(Json.Encode(Model.ElementCollection)),

            style: [
                {
                    selector: 'node',
                    style: {
                    'background-color': '#666',
                    'label': 'data(method)',
                    'width': 10,
                    'height': 10,
                    }
                },
                {
                    selector: 'edge',
                    style: {
                    'width': 2,
                    'line-color': '#ccc',
                    'target-arrow-color': '#ccc',
                    'target-arrow-shape': 'triangle'
                    }
                }
            ],

            layout: {
                name: 'dagre'
            },

            ready: function () {
                window.cy = this;
            }
        });

        cy.animate({
            pan: { x: 50, y: 50},
            zoom: 1
        },
        {
        duration: 1000
        });

        $(cy.filter('node')).each(function () {
            this.qtip({
                content: this.id(),
                position: {
                    my: 'top center',
                    at: 'bottom center'
                },
                style: {
                    classes: 'qtip-bootstrap',
                    tip: {
                        width: 16,
                        height: 8
                    }
                }
            });
        });

    });
</script>

<h2>Visualization</h2>

<div id="cy"></div>